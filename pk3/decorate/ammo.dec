actor HammerCharge : Ammo 
{
    Inventory.PickupMessage "Don't think you should've gotten this."
    Inventory.Amount 1
    Inventory.MaxAmount 100
    Ammo.BackpackAmount 0
    Ammo.BackpackMaxAmount 100
    +IGNORESKILL
    Inventory.Icon "AHAMA0"
    States
    {
    Spawn:
        ZOT3 ABCDE 1 BRIGHT
        loop
    }
}

actor HammerAmmoSmall : HammerCharge 30241
{
    Inventory.PickupMessage "Picked up some charge for the Omen."
    Inventory.PickupSound "hammer/snap"
    Inventory.Amount 10
    RenderStyle Add
    Alpha 0.99
    Scale 0.35
}

actor MaybeClipDrop
{
	States
	{
		Spawn:
			TNT1 A 0
			TNT1 A 0 A_JumpIf( ACS_ExecuteWithResult(267,WEEB_DEC_DROPAMMO) == 0, 2 )
			TNT1 A 0 A_SpawnItemEx ( "WeebClip" )
			TNT1 A 0
			Stop
	}
}

